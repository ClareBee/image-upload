<p id="notice"><%= notice %></p>

<h1>Images</h1>
<%= link_to 'New Image', new_image_path, class: 'btn btn-outline-info m-2' %>

<table class="table">
  <thead>
    <tr>
      <th>Filename</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @images.each do |image| %>
      <tr>
        <td><%= image_tag (image.filename.url), class: 'logo-img-lg m-2' %></td>
        <td><%= link_to 'Show', image, class: 'btn btn-outline-dark m-2' %>
            <%= link_to 'Edit', edit_image_path(image), class: 'btn btn-outline-warning m-2' %>
            <%= link_to 'Destroy', image, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

