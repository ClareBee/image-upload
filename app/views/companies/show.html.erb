<p id="notice"><%= notice %></p>

<%= link_to 'Edit', edit_company_path(@company), class: 'btn btn-outline-warning m-2' %> |
<%= link_to 'Back', companies_path, class: 'btn btn-outline-secondary m-2' %>
<p>
  <strong>Name:</strong>
  <%= @company.name %>
</p>

  <% @company.company_images.each do |company_image | %>
    <% if company_image.logo.url.present? %>
      <%= image_tag (company_image.logo.url) %>
      <p>
        <strong>Small Logo: </strong>
        <%= company_image.small_logo? %>
      </p>
    <% end %>
  <% end %>

