<p id="notice"><%= notice %></p>

<h1>Companies</h1>
<%= link_to 'New Company', new_company_path, class: 'btn btn-outline-info m-2' %>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @companies.each do |company| %>
      <tr>
        <td><%= company.name %></td>
        <td class="d-flex justify-content-end">
          <%= link_to 'Show', company, class: 'btn btn-outline-dark m-2' %>
          <%= link_to 'Edit', edit_company_path(company), class: 'btn btn-outline-warning m-2' %>
          <%= link_to 'Destroy', company, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-outline-danger m-2' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
