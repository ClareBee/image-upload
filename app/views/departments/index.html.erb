<p id="notice"><%= notice %></p>

<h1>Departments</h1>
<%= link_to 'New Department', new_department_path, class: 'btn btn-outline-info m-2' %>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @departments.each do |department| %>
      <tr>
        <td><%= department.name %></td>
        <td><% department.images.each do |image| %>
          <%= image_tag(image.url, class: 'rounded m-2') %>
          <% end %>
        </td>
        <td class="d-flex justify-content-end">
          <%= link_to 'Show', department, class: 'btn btn-outline-dark m-2' %>
          <%= link_to 'Edit', edit_department_path(department), class: 'btn btn-outline-warning m-2' %>
          <%= link_to 'Destroy', department, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-outline-danger m-2' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>


